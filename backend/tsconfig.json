{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "CommonJS",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
		}
    },
    "include": [
        "src/**/*",
    ],
	"ts-node": {
		"require": ["tsconfig-paths/register"] /* for absolute import */
	}
}
